<h1>Games New Create Page</h1>


<%= form_for (@game) do |f|%>

<% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
        <p style = " color : red " ><%= error %></p>
    <% end %>
   <% end %>

    <%= f.label :name %>
    <%=f.text_field :name %><br>

     <%= f.label :host_id %> 
    <%= f.collection_select :host_id, @users, :id, :name %><br>

    <%= f.label :court %>
    
    <%= f.collection_select :court, @chicago_courts, :id, :id %><br>
    
 
    <%= f.label :date %>
    <%=f.date_select :date %><br>
    
    <%= f.label :time %>
     <%= f.time_select :time, {discard_minute: true, ampm: true} %>

    <%= f.label :player_count %>
    <%=f.number_field :player_count%><br>

    <%=f.submit%><br>
<%end%>


