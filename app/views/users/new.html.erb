<h1>USER New Create Page</h1>


<%= form_for (@user) do |f|%>

<% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
        <p style = " color : red " ><%= error %></p>
    <% end %>
   <% end %>

    <%= f.label :name%>
    <%=f.text_field :name %><br>
    
    <%= f.label :age%>
    <%=f.number_field :age%><br>

    <%=f.submit%><br>

<%end%>